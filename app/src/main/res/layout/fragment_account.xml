<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorWhite"
		tools:context=".fragment.AccountFragment">


	<com.google.android.material.card.MaterialCardView
			android:id="@+id/materialCardView"
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:layout_marginTop="20dp"
			android:orientation="horizontal"
			app:cardCornerRadius="300dp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:strokeColor="@color/colorPrimary"
			app:strokeWidth="2dp">

		<ImageView
				android:id="@+id/imgProfile"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:scaleType="centerCrop"
				android:src="@drawable/girl_profile" />
	</com.google.android.material.card.MaterialCardView>

	<View
			android:id="@+id/view2"
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:layout_margin="10dp"
			android:background="#C4C4C4"
			app:layout_constraintBottom_toBottomOf="@+id/materialCardView"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@+id/materialCardView"
			app:layout_constraintTop_toTopOf="@+id/materialCardView" />

	<com.google.android.material.textview.MaterialTextView
			android:id="@+id/txtUsernameProfile"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:fontFamily="@font/roboto_bold"
			android:text="Trịnh Lê Bảo Giang"
			android:layout_marginTop="10dp"
			android:textSize="20dp"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/materialCardView" />

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"

			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/txtUsernameProfile">
		<TextView
				android:layout_marginTop="15dp"
				android:id="@+id/txtPhoneNumber"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="@drawable/ic_phone_android_24px"
				android:drawablePadding="30sp"
				android:textSize="18dp"
				android:layout_gravity="left"
				android:text="0960601203"
				android:textColor="#000" />
		<TextView
				android:layout_marginTop="10dp"
				android:id="@+id/txtDoB"
				android:paddingLeft="3dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="@drawable/ic_cake_24px"
				android:drawablePadding="35sp"
				android:textSize="18dp"
				android:layout_gravity="left"
				android:text="30-12-1997"
				android:textColor="#000" />
		<TextView
				android:layout_marginTop="10dp"
				android:id="@+id/txtWorkedTime"
				android:paddingLeft="3dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:drawableLeft="@drawable/ic_timer_24px"
				android:drawablePadding="35sp"
				android:textSize="18dp"
				android:layout_gravity="left"
				android:text="20 giờ / tuần"
				android:textColor="#000" />

	</LinearLayout>

	<Button
			android:id="@+id/btnLogout"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="20dp"
			android:text="Đăng xuất"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>